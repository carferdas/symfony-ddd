{% extends 'base.html.twig' %}

{% block body %}
    <h1>Users</h1>

    <a href="{{ path('users_create') }}">Create user</a>

    <table border="1">
        <thead>
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <td>Active</td>
            <td>Action</td>
        </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.firstName }}</td>
                    <td>{{ user.lastName }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.isActive }}</td>
                    <td>
                        <a href="{{ path('users_edit', {'id': user.id}) }}">Edit</a>

                        <form action="{{ path('users_delete', {'id': user.id}) }}" method="POST">
                            <input type="hidden" name="_method" value="DELETE">
                            <a href="#" onclick="this.closest('form').submit(); return false;">Delete</a>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}